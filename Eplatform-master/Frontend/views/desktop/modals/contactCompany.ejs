
<!--Modal for contact company-->
<div class="modal fade" id="contactCompany" tabindex="-1" role="dialog" aria-labelledby="contactCompanyLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="contactCompanyLabel" style="display: contents;"><%= langData.title_contactCompany %></h6>
                <button type="button" class="close closeButton" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input name="_id" type="hidden" value="<%= receiveData._id %>"/>
                    <div class="form-group">
                        <label for="fullname" class="col-form-label"><%= langData.lbl_fullName %></label>
                        <input type="text" class="" id="fullname" name="fullname" placeholder="<%= langData.placeholder_fullName %>" required/>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-form-label"><%= langData.lbl_email %></label>
                        <input type="text" class="" id="email" name="email" placeholder="<%= langData.placeholder_email %>" required/>
                    </div>
                    <div class="form-group">
                        <label for="phonenumber" class="col-form-label"><%= langData.lbl_phoneNumber %></label>
                        <input type="text" class="" id="phonenumber" name="phonenumber" placeholder="<%= langData.placeholder_phoneNumber %>" required/>
                    </div>
                    <div class="form-group">
                        <label for="whatcan" class="col-form-label"><%= langData.lbl_whatCanWeDoForYou %></label>
                        <textarea class="" id="whatcan" name="whatcan" placeholder="<%= langData.placeholder_message %>" required></textarea>
                    </div>
                    <div class="modal-footer">
                        <div class="clearfix"></div>
                        <button type="submit" class="nextButton" id="btnSubmitContact"><%= langData.lbl_submit %></button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        $(() => {
            function submit() {
                var postData = {};
                $("#contactCompany form").serializeArray().forEach(function (e) {
                    postData[e.name] = e.value;
                })

                $.ajax({
                    url: "<%= genUrl.getContactCompanyApi() %>",
                    method: "post",
                    data: postData,
                    success: function (html) {
                        $(html).modal();
                    }
                })
            }
            $("#contactCompany form").submit(function () {
                submit();
                return false;
            });
        })
    </script>
</div>